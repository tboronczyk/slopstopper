{
  "manifest_version": 3,
  "name": "SlopStopper - LinkedIn Post Filter",
  "version": "1.0",
  "description": "Hide slop posts on LinkedIn",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://www.linkedin.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ]
}
